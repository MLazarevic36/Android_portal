<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hrle.android_portal.ReadPostActivity"
    android:id="@+id/arp">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_rp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        />



    <TextView
        android:id="@+id/slika"
        android:layout_width="190dp"
        android:layout_height="141dp"
        android:layout_below="@+id/naslov"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/autor"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/naslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/autor"
        android:layout_width="219dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/naslov"
        android:text="Autor: "
        android:textSize="10sp" />

    <TextView
        android:id="@+id/datum"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/autor"

        android:textSize="10sp" />

    <TextView
        android:id="@+id/lokacija"
        android:layout_width="219dp"
        android:layout_height="42dp"
        android:layout_below="@+id/datum"
        android:layout_alignParentEnd="true"

        android:textSize="10sp" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="68dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opis"
        android:drawableLeft="@drawable/ic_like"

         />

    <TextView
        android:id="@+id/dislikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/likes"
        android:layout_below="@id/opis"
        android:drawableLeft="@drawable/ic_dislike"



        />

    <TextView
        android:id="@+id/opis"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slika"

        android:background="@drawable/border"
        />



    <ListView
        android:id="@+id/lv_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/likes"
         />


</RelativeLayout>

