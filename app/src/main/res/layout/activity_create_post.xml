<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hrle.android_portal.CreatePostActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        />



    <EditText
        android:id="@+id/etNaslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_cp"
        android:hint="Unesite naslov"
         />



    <EditText
        android:id="@+id/etOpis"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="Unesite opis"
        android:layout_below="@id/etNaslov" />

    <Button
        android:id="@+id/dugmeZaSliku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="198dp"
        android:text="Izaberi sliku">

    </Button>

    <ImageView
        android:id="@+id/izabranaSlika"
        android:layout_below="@id/etOpis"
        android:layout_alignParentEnd="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toEndOf="@id/dugmeZaSliku"
        />





</RelativeLayout>
