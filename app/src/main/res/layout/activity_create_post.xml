<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hrle.android_portal.CreatePostActivity">

    <TextView
        android:id="@+id/naslovNove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="81dp"
        android:text="Naslov: "
        android:textSize="25dp" />

    <EditText
        android:id="@+id/etNaslov"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/naslovNove"
        android:layout_toEndOf="@+id/naslovNove" />

    <TextView
        android:id="@+id/opis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBottom="@+id/etOpis"
        android:layout_alignParentStart="true"
        android:text="Opis:"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/etOpis"
        android:layout_width="366dp"
        android:layout_height="64dp"

        android:layout_below="@+id/etNaslov"
        android:layout_marginTop="71dp"
        android:layout_toEndOf="@+id/opis" />

    <Button

        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/etOpis"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="128dp"
        android:text="Objavi" />

</RelativeLayout>
