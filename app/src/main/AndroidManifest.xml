<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hrle.android_portal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostsActivity"
            android:label="@string/posts_activity" />
        <activity
            android:name=".CreatePostActivity"
            android:label="@string/create_post_activity"
            />
        <activity
            android:name=".ReadPostActivity"
            android:label="@string/read_posts_activity"/>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".PostsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PostsActivity" />
        </activity>
        <activity
            android:name=".ReadPostActivityTabbed"
            android:label="@string/title_activity_read_post_tabbed"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />


    </application>

</manifest>